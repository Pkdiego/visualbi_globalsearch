{
  "dataRoles": [
    {
      "name": "searchFields",
      "kind": "Grouping",
      "displayName": "Search Fields",
      "description": "Drag here the fields you want to search"
    }
  ],
  "dataViewMappings": [
    {
      "table": {
        "rows": {
          "for": {
            "in": "searchFields"
          },
          "dataReductionAlgorithm": {
            "top": {
              "count": 50000
            }
          }
        }
      }
    }
  ],
  "objects": {
    "appearance": {
      "displayName": "Appearance",
      "properties": {
        "theme": {
          "displayName": "Theme",
          "type": {
            "enumeration": [
              { "value": "blackwhite", "displayName": "Black & White" },
              { "value": "red",        "displayName": "Red" },
              { "value": "blue",       "displayName": "Blue" },
              { "value": "mustard",    "displayName": "Mustard" },
              { "value": "green",      "displayName": "Green" }
            ]
          }
        },
        "language": {
          "displayName": "Language",
          "type": {
            "enumeration": [
              { "value": "auto", "displayName": "Auto (system)" },
              { "value": "en",   "displayName": "English" },
              { "value": "pt",   "displayName": "Português (BR)" },
              { "value": "es",   "displayName": "Español" }
            ]
          }
        }
      }
    },
    "general": {
      "displayName": "General",
      "properties": {
        "filter":  { "type": { "filter": true } },
        "filter1": { "type": { "filter": true } },
        "filter2": { "type": { "filter": true } },
        "filter3": { "type": { "filter": true } },
        "filter4": { "type": { "filter": true } },
        "filter5": { "type": { "filter": true } },
        "filter6": { "type": { "filter": true } },
        "filter7": { "type": { "filter": true } },
        "filter8": { "type": { "filter": true } },
        "filter9": { "type": { "filter": true } }
      }
    },
    "searchBox": {
      "displayName": "Search Box",
      "properties": {
        "placeholder": {
          "displayName": "Placeholder Text",
          "type": { "text": true }
        },
        "borderColor": {
          "displayName": "Border Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "focusBorderColor": {
          "displayName": "Focus Border Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "backgroundColor": {
          "displayName": "Background Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "textColor": {
          "displayName": "Text Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "fontSize": {
          "displayName": "Font Size",
          "type": { "numeric": true }
        },
        "fontFamily": {
          "displayName": "Font Family",
          "type": { "text": true }
        },
        "borderRadius": {
          "displayName": "Border Radius",
          "type": { "numeric": true }
        },
        "height": {
          "displayName": "Height (px)",
          "type": { "numeric": true }
        }
      }
    },
    "iconSettings": {
      "displayName": "Search Icon",
      "properties": {
        "iconColor": {
          "displayName": "Icon Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "showIcon": {
          "displayName": "Show Icon",
          "type": { "bool": true }
        },
        "iconSize": {
          "displayName": "Icon Size (px)",
          "type": { "numeric": true }
        },
        "clearBtnSize": {
          "displayName": "Clear Button Size (px)",
          "type": { "numeric": true }
        }
      }
    },
    "dropdown": {
      "displayName": "Suggestions Dropdown",
      "properties": {
        "headerColor": {
          "displayName": "Header Background",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "headerTextColor": {
          "displayName": "Header Text Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "headerFontSize": {
          "displayName": "Header Font Size (px)",
          "type": { "numeric": true }
        },
        "headerHeight": {
          "displayName": "Header Height (px)",
          "type": { "numeric": true }
        },
        "groupLabelColor": {
          "displayName": "Group Label Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "itemHoverColor": {
          "displayName": "Item Hover Background",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "matchTextColor": {
          "displayName": "Match Highlight Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "maxResults": {
          "displayName": "Max Results per Field",
          "type": { "numeric": true }
        },
        "dropdownMaxHeight": {
          "displayName": "Dropdown Max Height (px)",
          "type": { "numeric": true }
        },
        "itemFontSize": {
          "displayName": "Item Font Size (px)",
          "type": { "numeric": true }
        },
        "itemFontFamily": {
          "displayName": "Item Font Family",
          "type": { "text": true }
        },
        "groupLabelFontSize": {
          "displayName": "Group Label Font Size (px)",
          "type": { "numeric": true }
        }
      }
    },
    "searchConfig": {
      "displayName": "Configuration",
      "properties": {
        "searchMode": {
          "displayName": "Search Mode",
          "type": {
            "enumeration": [
              { "value": "contains",   "displayName": "Contains" },
              { "value": "startsWith", "displayName": "Starts With" },
              { "value": "equals",     "displayName": "Equals" }
            ]
          }
        },
        "ignoreAccents": {
          "displayName": "Ignore Accents",
          "type": { "bool": true }
        },
        "caseSensitive": {
          "displayName": "Case Sensitive",
          "type": { "bool": true }
        },
        "showDiagnostics": {
          "displayName": "Show Metrics",
          "type": { "bool": true }
        }
      }
    },
    "tags": {
      "displayName": "Filter Tags",
      "properties": {
        "tagColor": {
          "displayName": "Tag Background",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "tagTextColor": {
          "displayName": "Tag Text Color",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "tagFontSize": {
          "displayName": "Tag Font Size",
          "type": { "numeric": true }
        },
        "showFieldName": {
          "displayName": "Show Field Name in Tag",
          "type": { "bool": true }
        }
      }
    }
  },
  "supportsHighlight": false,
  "suppressDefaultTitle": true,
  "supportsLandingPage": true,
  "privileges": []
}
